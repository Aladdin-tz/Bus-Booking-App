<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#93B4D5"
    android:elevation="4dp"
    android:layout_margin="7dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_marginLeft="7dp"
            android:layout_marginTop="8dp"
            android:id="@+id/img_bus_ly"
            android:layout_width="180dp"
            android:layout_height="130dp"
            android:src="@mipmap/bus_land_page"/>

        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:textSize="15sp"
                android:id="@+id/bus_name_bus_ly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <TextView
                android:textSize="15sp"
                android:id="@+id/bus_type_bus_ly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <TextView
                android:textSize="15sp"
                android:id="@+id/bus_from_bus_ly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <TextView
                android:textSize="15sp"
                android:id="@+id/bus_to_bus_ly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <TextView
                android:textSize="15sp"
                android:id="@+id/bus_time_bus_ly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/book_bus_ly"
                android:textColor="#000000"
                android:text="Book Now"/>


        </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>