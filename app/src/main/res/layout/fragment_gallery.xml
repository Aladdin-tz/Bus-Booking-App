<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".ui.gallery.GalleryFragment">


    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="10dp"
        android:text="1. Price listed does not include luggage price"
        android:textSize="19sp"
         />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="10dp"
        android:text="2. Ensure Information provided is correct"
        android:textSize="19sp"
         />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="3. Any booking unpaid untill expire date will automatically be cancelled"
        android:textSize="19sp"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="10dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="4. Fares are not guaranteed until we confirms your booking and payment is made full"
        android:textSize="19sp"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="10dp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="5. Disclaimers- we may refuse carriage of you or your baggage."
        android:textSize="19sp"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="10dp" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="6. if, in the exercise of our reasonable direction, we determine either that the payment of your fare id fraudulent"
        android:textSize="19sp"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="10dp" />
</LinearLayout>