<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#93B4D5"
    android:elevation="4dp"
    android:layout_margin="7dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_marginLeft="7dp"
            android:layout_marginTop="8dp"
            android:id="@+id/img_detail_ly"
            android:layout_width="180dp"
            android:layout_height="140dp"
            android:src="@mipmap/bus_land_page"/>

        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/bus_type_detail_ly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alice"
                android:text="TextView"
                android:textColor="#000"
                android:textAllCaps="true"
                android:textSize="20sp" />

            <TextView
                android:textSize="17sp"
                android:id="@+id/bus_ac_detail_ly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <TextView
                android:textSize="17sp"
                android:id="@+id/bus_charge_detail_ly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <TextView
                android:textSize="17sp"
                android:id="@+id/bus_bites_detail_ly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <TextView
                android:gravity="right"
                android:textColor="#004D40"
                android:textSize="18sp"
                android:id="@+id/bus_amount_detail_ly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="AMOUNT" />
        </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>