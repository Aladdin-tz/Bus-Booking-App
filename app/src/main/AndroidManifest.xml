<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bookingapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/bus_land_page"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BookingApp">
        <activity android:name=".ForgetPasswordActivity"></activity>
        <activity android:name=".ViewBookingActivity" />
        <activity android:name=".AdminHomeActivity" />
        <activity android:name=".PassengerDetailsActivity" />
        <activity android:name=".BusDetailsActivity" />
        <activity android:name=".BusImageActivity" />
        <activity android:name=".ImageActivity" />
        <activity android:name=".AdminActivity" />
        <activity
            android:name=".NavigationDrawerActivity"
            android:label="@string/title_activity_navigation_drawer"
            android:theme="@style/Theme.BookingApp.NoActionBar" />
        <activity android:name=".NavigationActivity" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".RegistrationActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>